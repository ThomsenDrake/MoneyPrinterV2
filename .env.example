# MoneyPrinterV2 Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# =============================================================================
# CRITICAL SECRETS (Never share these!)
# =============================================================================

# AssemblyAI API Key for speech-to-text subtitle generation
# Get your key at: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=

# Gmail/SMTP Credentials for email outreach
# IMPORTANT: Use Google App Passwords, not your real password
# Generate at: https://myaccount.google.com/apppasswords
SMTP_USERNAME=
SMTP_PASSWORD=

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Enable verbose logging (true/false)
VERBOSE=true

# Firefox profile path (leave empty for default)
# Example: /home/user/.mozilla/firefox/your-profile.default
FIREFOX_PROFILE=

# Run Firefox in headless mode (true/false)
# Set to true for cloud/server environments
HEADLESS=false

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# LLM model for content generation (via g4f - free, no API key needed)
# Options: gpt4, gpt_4o, gpt_4o_mini, gpt35_turbo, llama2_7b, llama2_13b,
#          llama2_70b, mixtral_8x7b, claude_v2, gemini_pro
LLM_MODEL=gpt4

# LLM model for generating image prompts
# Options: Same as above, but gpt35_turbo recommended for speed
IMAGE_PROMPT_LLM=gpt35_turbo

# Image generation model (via g4f - free, no API key needed)
# Options: prodia, lexica, v1, v2, v2-beta, v3 (DALL-E), turbo
IMAGE_MODEL=prodia

# =============================================================================
# SOCIAL MEDIA CONFIGURATION
# =============================================================================

# Default language for Twitter posts
# Examples: English, Spanish, French, German, etc.
TWITTER_LANGUAGE=English

# Mark YouTube videos as "made for kids" (true/false)
IS_FOR_KIDS=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Number of CPU threads for video processing
# Recommendation: Set to number of CPU cores (e.g., 2, 4, 8)
THREADS=2

# =============================================================================
# EXTERNAL RESOURCES
# =============================================================================

# Custom songs/music ZIP URL (leave empty for default)
# Example: https://example.com/my-songs.zip
ZIP_URL=

# Google Maps Scraper ZIP URL (for business outreach feature)
GOOGLE_MAPS_SCRAPER_URL=https://github.com/gosom/google-maps-scraper/archive/refs/tags/v0.9.7.zip

# =============================================================================
# EMAIL OUTREACH CONFIGURATION
# =============================================================================

# SMTP server configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Business niche to scrape from Google Maps
# Examples: "restaurants in New York", "plumbers in Los Angeles"
GOOGLE_MAPS_SCRAPER_NICHE=

# Scraper timeout in seconds (default: 300 = 5 minutes)
SCRAPER_TIMEOUT=300

# Email subject line for cold outreach
OUTREACH_MESSAGE_SUBJECT=I have a question...

# HTML file containing email body (use {{COMPANY_NAME}} as placeholder)
OUTREACH_MESSAGE_BODY_FILE=outreach_message.html

# =============================================================================
# VIDEO/SUBTITLE CONFIGURATION
# =============================================================================

# Font file for video subtitles (must exist in fonts/ directory)
# Example: bold_font.ttf
FONT=bold_font.ttf

# Path to ImageMagick binary
# Linux/macOS: /usr/bin/convert
# Windows: C:/Program Files/ImageMagick-7.x.x-Q16/magick.exe
IMAGEMAGICK_PATH=/usr/bin/convert

# Maximum words per subtitle sentence (default: 4)
SCRIPT_SENTENCE_LENGTH=4

# =============================================================================
# OPTIONAL: CLOUDFLARE WORKER (Advanced)
# =============================================================================

# If using Cloudflare Worker for image generation instead of g4f
# Leave empty if using g4f (recommended for beginners)
CLOUDFLARE_WORKER_URL=
