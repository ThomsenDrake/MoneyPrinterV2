[flake8]
# Configuration for flake8 linting

# Maximum line length
max-line-length = 100

# Ignore specific error codes
ignore =
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E501: line too long (handled by Black)
    E501,
    # E722: do not use bare 'except' (we have specific exceptions now)
    # F401: module imported but unused (false positives with __init__.py)
    # F403: 'from module import *' used (used in some modules)
    # E402: module level import not at top of file (sometimes necessary)

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .mypy_cache,
    .pytest_cache,
    htmlcov,
    *.pyc

# Show source code for errors
show-source = True

# Count errors
count = True

# Complexity settings
max-complexity = 15

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401,F403
    # Allow star imports in some files
    src/utils.py:F403,F405
    src/status.py:F403,F405
